@using ProjectInter.Models
@model List<Products>
@using System.Globalization

@{
    ViewBag.Title = "Point Dashboard";
    ViewBag.Styles = "/css/dashboard/inventory.css";
    ViewBag.Script = "/js/dashboard/inventory.js";
    Layout = "/Views/Shared/_layoutDashboard.cshtml";
}

<div id="table">
    @foreach (var product in Model)
    {
        <div class="productCard">
        @{string typeUnit = product.TypeProduct.TypeUnit == 1 ? "" : "ml";}
        @{string typeProduct = product.TypeProduct.TypeProduct == 1 ? "Adicional" : "Primario";}
            @if (product.TypeProduct.TypeProduct == 0)
            {
                <img class="productImage" src="/uploads/@product.Image">
            }
            <div class="productInfo">
                <div class="invetoriContainer">
                    <div>
                    <div class="productNameContainer">
                        <h2 class="productName">@product.Name</h2>
                        <hr class="productLine">
                    </div>
                    <div class="inventoryInformation">
                        <div class="cardLine">
                            <h3 class="estoqueTitle">Estoque:</h3>
                        </div>
                        <div class="cardLine">
                            <p class="productInformation typeProduct">Tipo: @typeProduct</p>
                            <p class="productInformation productInventory">Quantidade: @product.Inventory @typeUnit</p>
                        </div>
                    </div>
                    </div>
                    <div class="priceContainer">
                        <div class="cardLine priceLine">
                            <p class="productInformation productEditBtn">Editar</p>
                        </div>
                        <div class="cardLine priceLine">
                            <p class="productInformation productPrice">Pre√ßo: R$@string.Format(CultureInfo.GetCultureInfo("pt-BR"), "{0:N2}", product.TypeProduct.Price)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
