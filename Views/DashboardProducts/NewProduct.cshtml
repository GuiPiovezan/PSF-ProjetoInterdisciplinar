@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjectInter.Models.Products

@{
    ViewBag.Title = "Point Dashboard";
    ViewBag.Styles = "/css/dashboard/newProduct.css";
    ViewBag.Script = "/js/dashboard/newProduct.js";
    Layout = "/Views/Shared/_layoutDashboard.cshtml";
}

<div id="table">
    <form id="formCadastroProduct" asp-controller="Dashboard" asp-action="NewProduct"  method="POST" enctype="multipart/form-data" >
        <div class="formLine">
            <img id="productImagePreview" src="/img/camera.png" alt="Adicionar imagem" />
            <input id="productImage" asp-for="Image" accept="image/*"/>
            <div id="productInfoBox" class="formLine">
                <div class="formLine">
                    <input id="productName" class="formInput" type="text" placeholder="Nome" name="Name">
                    <input id="productPrice" class="formInput" type="text" placeholder="Preço" name="Price">
                </div>
                <div class="formLine">
                    <input id="quantidade" class="formInput" type="text" placeholder="Quantidade" name="Quantity">
                    <div class="medida">
                            <input type="radio" name="Medida" id="ml">
                        <label for="ml" id="labelMl" class="formInput radioBtn">
                            ml
                        </label>
                            <input type="radio" name="Medida" id="medidaQuantidade">
                        <label for="medidaQuantidade" id="labelQuantidade" class="formInput radioBtn">
                            Quantidade
                        </label>
                            <input type="radio" name="ProductType" id="productTypePrimario">
                        <label for="productTypePrimario" id="labelProductTypePrimario" class="formInput radioBtn">
                            Primario
                        </label>
                            <input type="radio" name="ProductType" id="productTypeAdicional">
                        <label for="productTypeAdicional" id="labelProductTypeAdicional" class="formInput radioBtn">
                            Adicional
                        </label>
                    </div>
                </div>
                <h2 class="formSubTitle">Descrição</h2>
                <div class="formLine">
                    <input type="text" name="Descrição" id="description" class="formInput">
                </div>
            </div>
        </div>
        <div id="formOptionsBtn">
            <button id="btnSubmit" class="btnForm" type="submit">Salvar <i class="far fa-save"></i></button>
        </div>
    </form>
</div>
